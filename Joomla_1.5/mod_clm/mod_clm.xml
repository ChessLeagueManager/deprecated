	<version>1.1.1</version>
	<description>
		<![CDATA[
			 <h3>Chess League Manager : Darstellungs Modul</h3>
			 <p>Das Modul, welches die Frontend Funktionen für den (öffentlichen) Ligenbetrieb zur Verfügung stellt.</p>
			 <p>Eine Kopie dieses Moduls ist nötig für die Darstellung der Mannschaftsturniere im Frontend.</p>
			 <p><a target="_blank" href="http://www.chessleaguemanager.de">CLM Projekt Homepage</a></p>
			 <p>&copy; Thomas Schwietert [<a target="_blank" href="http://www.sboo.de">www.sboo.de</a>] &amp; Andreas Dorn [<a target="_blank" href="http://www.sbbl.org">www.sbbl.org</a>]</p>
			 ]]>
		 </description>

	<files>
		<filename module="mod_clm">mod_clm.php</filename>
		<filename>changelog.txt</filename>
		<filename>index.html</filename>
		<filename>helper.php</filename>
		<filename>tmpl/default.php</filename>
		<filename>tmpl/index.html</filename>

	</files>
	<params>
		<param name="mt_type" type="list" default="0" label="Typ" description="Entscheide: Ligen oder Mannschaftsturniere der Saison">
			<option value="0">Ligen</option>
			<option value="1">Mannschaftsturniere</option>
		</param>
		
		<param name="dwzliga" type="radio" default="1" label="DWZ Mannschaften">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>
		<param name="statistik" type="radio" default="1" label="Liga Statistiken">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>
		<param name="termine" type="radio" default="1" label="Termine">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>
		<param name="vereine" type="radio" default="1" label="Vereinsliste">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>
	</params>
</install>
