	<authorUrl>www.chessleaguemanager.de</authorUrl>
	<version>1.1.1</version>
	<description>
		<![CDATA[
			 <h3>Chess League Manager : Termin Modul</h3>
			 <p>Modul, welches die kommenden Termine anzeigt.</p>
			 <p><a target="_blank" href="http://www.chessleaguemanager.de">CLM Projekt Homepage</a></p>
			 <p>&copy; Fjodor Sch&auml;fer [<a target="_blank" href="http://www.vonfio.de">www.vonfio.de</a>]</p>
			 ]]>
		 </description>

	<files>
		<filename module="mod_clm_termine">mod_clm_termine.php</filename>
		<filename module="mod_clm_termine">mod_clm_termine.css</filename>
		<filename>changelog.txt</filename>
		<filename>index.html</filename>
		<filename>helper.php</filename>
		<filename>tmpl/default.php</filename>
		<filename>tmpl/index.html</filename>
	</files>

	<params>
		<param name="liste" type="list" default="1" label="Style">
			<option value="0">Liste</option>
			<option value="1">Kalenderansicht *Beta*</option>
		</param>
		<param type="spacer" />
		<param name="anzahl" type="text" default="5" label="Anzahl" />
		<param type="spacer" />

		<param name="datum" type="radio" default="1" label="Datum">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>

		<param name="datumlink" type="radio" default="0" label="Datum verlinken">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>

		<param type="spacer" />
		<param name="terminlink" type="radio" default="1" label="Ereignis verlinken">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>

		<param name="name" type="radio" default="1" label="Terminname">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>

		<param name="typ" type="radio" default="1" label="Liga / Turnier / Kategorie">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>

	</params>

</install>



